/** 
 
 * Checkout CSS
 * 
 * Custom checkout CSS is disabled by default.
 * To enable it, rename this file to "checkout.css.liquid".
 */
 



/** 
 * Background 
 */

{% if settings.checkout_use_header_image %}
  html{ 
  
    background: url({{ 'checkout_header_image.jpg' | asset_url }}) 50% 0 no-repeat; 
      
    }
{% endif %}

html{ background-color: {{ settings.checkout_banner_background_color }} }

body, #main, #container, #header, #footer { background: transparent !important; }


/** 
 * Generic
 */

body { 
  font:13px/1.231 arial; 
  *font-size:small; 
  color: {{ settings.base-color }}; 
  } 

input, textarea { 
  color: #333;
  font-size: 13px;
  font-family: arial;
  }

label{ 
  font-weight: normal; 
  font-size: 12px;
  }

h1, h2, h3, h4, h5, h6 { 
  color: {{ settings.heading-color }}; 
  line-height: 1.2;
  font-weight: bold; 
  margin: 0 0 .5em 0;
  text-shadow: none !important;
  }

a { color: {{ settings.a-color }}; }
a:hover { color: {{ settings.a-hover-color }} }



/** 
 * Layout
 */
#container{
  width: 980px;
  margin: 0 auto;
  }
#main,
#container.slim #main,
#content,
#footer{
  padding: 0;
  width: auto;
  }

#container{ font-size: 100%; } 

#container.slim{ width: 740px; }
#container.slim #main{ width: auto;}  

#addresses{
  background: {{ settings.content_bg_colour }};
  }

#email,
.group{
  width: 700px;
  margin: 0 0 20px 0;  
  padding: 20px;    
  background: {{ settings.form-elm-background }};
  line-height: 1.5em;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  border: none;
  }
.group{
  float: left;
  }

.group h3,
.pgroup h3,
#email label{
  font-weight: bold !important;
  color: {{ settings.heading-color }};
  margin: 0 0 12px 0;
  padding: 0 0 8px 0;
  //border-bottom: dotted 1px {{ settings.content_secondary_colour }};  
  }
#email input{ 
  border: 1px solid #ccc;
  border-bottom: 1px solid #e7e7e7;
  border-right: 1px solid #e7e7e7; 
  border-radius:4px;
  padding:5px;
  font-size: 16px;
  width: 400px;
  outline:none;
}  
  
/** 
 * Umbrella 
 */ 
#info-bar{
  display: none;
  }
  

/** 
 * Header
 */
#header,
#header h1{
  padding: 0;
  }

#tagline .subtitle{
  display: none;
  }

{% if settings.checkout_logo != "" %}
#logo{
  width: 100%;
  height: 100px;
  background: url({{ settings.checkout_logo | asset_url }}) 0 85% no-repeat;
  }
#tagline{ display: none; }
{% endif %}

/** 
 * Overview
 */

 #overview{ /* styles from widgets in right column */
  width: 195px;
  padding: 100px 10px 10px 10px; /* make some room for the "wallet" */  
  float: right;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  border: none;
  margin: 0 0 20px 0;
  position: relative;
  background: {{settings.widget_bg_colour}};
  overflow: hidden; height: 1%;
  }

#overview h2{
  display: none; /* hide: you know you're purchasing these things. */
  //color: {{ settings.widget_text_colour }};
  text-align: center;
  }

#overview #products{
  width: auto;
  float: none;
  border: none;
  }
#overview #wallet{
  margin: 0; padding: 10px;
  width: 175px;
  height: 120px;
  position: absolute; top: 10px;
  text-align: center;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  }
#overview #cost{
  color: {{settings.a-hover-color}};
  
    font: bold 36px/1.0 arial;
  
  text-shadow: none;
  //border-bottom: dotted 1px {{settings.widget_divider_colour}};
  }
#overview .hint{
  color: {{settings.widget_title_colour}};
  margin: 0 0 3px 0;
  display: block;
  }
#overview #steps{
  margin: 0; padding: 0 0 8px 0;
  display: block;
  font: normal 13px arial;
  //border-bottom: dotted 1px {{settings.widget_divider_colour}};  
  }
#overview br{ display: none; }

#overview #thumbs{
  margin: 0;
  border-collapse: collapse;
  }
#overview #thumbs td{
  overflow: hidden; height: 1%;
  font-size: 100%;
  text-align: center;
  vertical-align: top;
  padding: 4px;
  //border: dotted 1px {{settings.widget_divider_colour}}
  }
#overview #thumbs div{
  float: none;
  width: 100% !important; height: auto;
  border: none;
  margin: 0 0 10px 0; padding: 0;
  }
#overview #thumbs img{ 
  /*display: block; */
  margin: 0 auto;
  padding: 1px;
  //border: solid 1px {{ settings.content_secondary_colour }};  
  }

#overview #thumbs h3{ color: {{settings.heading-color}}; }
#overview #thumbs span{ color: {{ settings.base-color }}; }

.slim #overview{ display: none; }

/** 
 * Checkout Form 
 */

.form{ width: 100%; }
.form label{ font-weight: normal; }

.form td{ padding: 5px 0; }
.form td.lbl{ width: 245px; text-align: left; padding-right: 8px; }
input[type="text"]{ font-size: 13px; width: 200px !important; padding:5px;border-radius:4px;outline:none;background:#fff; }

.form .inline li{ 
  float: none;
  width: 100% !important; 
  margin: 0 !important; 
  overflow: hidden;
  height: 1%;
  padding: 0 0 8px 0;
  }
.form .inline label{
  float: left;
  width: 96px; padding-right: 8px;
  }

span.sign-in-message{ display:block; }
.form .inline select{
  float: left;
  padding:5px;
  border: 1px solid #ccc;
  border-bottom: 1px solid #e7e7e7;
  border-right: 1px solid #e7e7e7;
  width:212px !important;
  border-radius:4px;
  outline:none;
  }
#billing_address_province_li,
#shipping_address_province_li{ padding: 0; }

/* Form Errors */
.field-with-errors{
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;    
  }

/* Billing/Shipping Addresses */
#addresses{
  overflow: hidden;
  height: 1%;
  }

#addresses .gleft,
#addresses .gright{
  width: 330px;
  padding: 0;
  margin: 0;
  }
#addresses .gleft{ 
  float: left; 
  border-right: solid 1px {{ settings.content_secondary_colour }};
  padding-right: 20px;
  }
#addresses .gright{ float: right; }

#billing_address_phone{
  margin: 0 0 10px 0;
  }
#billing-is-shipping td{
  
  padding: 5px;
  }

#addresses #shipping-same.address-notification{
  padding: 10px;
  text-align: left;
  background: {{ settings.footer_bg_colour }} !important;
  color: {{ settings.footer_link_colour }};
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;  
  border: none;
  }

/* paying for your order */ 
#payment p.sst{
  margin-bottom: 0;
  }

.sst .gleft{
  width: 80%;
  }
#credit-card-info.gright{
  margin: 20px 0 0 10px;
  float: left;
  width:100%;
  }





/* Next/Prev Step */
#buttons{
  clear: both;
  background: {{ settings.footer_bg_colour }};
  color: {{ settings.footer_txt_colour }};
  border: none;
  }
#buttons a{ color: {{ settings.a-color }};}
#buttons a:hover{ color: {{ settings.a-hover-color }};}

#buttons small{ font-size: 12px; }

#buttons input{ font-size: 13px; }
#buttons #commit-button,
#buttons #complete-purchase
{
  display: inline-block;
  border:none;
  padding: 10px;
  text-decoration: none;  
  font-weight: bold;
  font-family: arial;
  text-align: center;
  cursor: pointer;
  outline:none;
  background: {{settings.btn-clr2}} ;
  color: {{settings.btn-clr2-color}};

  }

input[name="commit"]{
  display: inline-block;
  border:none;
  padding: 5px 10px;
  text-decoration: none;  
  font-weight: bold;
  font-family: arial;
  text-align: center;
  cursor: pointer;
  outline:none;
  background: {{settings.btn-clr1}} ;
  color: {{settings.btn-clr1-color}};

  }
#buttons #commit-button:hover,
#buttons #complete-purchase:hover,input[type="submit"]:hover{
  opacity:0.8;
  text-decoration:none;
  }


/** 
 * Footer 
 */
 #footer{
  clear: both;
  padding: 15px 0 0 0;
  //color: {{ settings.footer_txt_colour }};
  }
#footer p{ float:left;margin-bottom:10px; }
#footer #shop-policies{ float:right;margin-bottom:10px; }
#footer a{ color: {{ settings.a-color }};}
#footer a:hover{ color: {{ settings.a-hover-color }};}

::-webkit-input-placeholder { display:block; }
::-moz-placeholder {display:block; } /* firefox 19+ */
:-ms-input-placeholder { display:block;} /* ie */

