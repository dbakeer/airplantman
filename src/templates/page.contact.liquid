<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">{{ page.title }}</li>
</ol>

<div class="collection-title">
  <h2 class="p0 m0 center">
    {{ page.title }}
  </h2>
</div>

<div class="rte m25">
  {% form 'contact' %}

  {% if form.posted_successfully? %}
    <div class="success">
      <p>Thanks for contacting us! We'll get back to you as soon as possible.</p>
    </div>
  {% endif %}

  {% if form.errors %}
  <div class="errors">
    <!-- {{ form.errors.size }} or {{ form.errors | size }} -->
    {% for field in form.errors %}
      <p>The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</p>
    {% endfor %}
  </div>
  {% endif %}
   
  <div>
    <div class="form-group">
      <label>Your Name:</label>
      <input type="text" id="contactFormName" name="contact[name]" placeholder="John Doe" />
    </div>
    <div class="form-group">
      <label>Email:</label>
      <input type="email" id="contactFormEmail" name="contact[email]" placeholder="john@example.com" />
    </div>
    <div class="form-group">
      <label>Phone Number:</label>
      <input type="telephone" id="contactFormTelephone" name="contact[phone]" placeholder="555-555-1234" />
    </div> 
    <div class="form-group m25">
      <label>Message:</label>
      <textarea rows="15" cols="75" id="contactFormMessage" name="contact[body]" placeholder="Your Message"></textarea>
    </div>
    <div class="form-group or">
      <button type="submit" class="button clr2">Send</button> or <a href="/collections/all">Cancel</a>
    </div>        
  </div><!-- contactWrapper -->

  {% endform %}
</div>