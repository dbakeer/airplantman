$teal:#21A3A2;
$orange:#FE3A14;
$content-margin:2rem;
.content-margin-small { margin-bottom:$content-margin/2; }
.content-margin { margin-bottom:$content-margin; }
.content-margin-large { margin-bottom:$content-margin*2; }

h4 { font-size:2rem !important; text-transform:uppercase !important; }

.text-center { text-align:center; }

.pin .image { position:relative;
    .image-hover { display:none; }
    .shop-now { display:none; }
}

a:hover { text-decoration:none !important; }

.container { width:100% !important; }

.newsletter-form { display:flex; align-items:center; justify-content:center; }

.padding {
    &_small { padding:1rem; }
    &_medium { padding:2rem; }
    &_large { padding:4rem; }
}

.shopify-preview-bar { display:none; }

@media (min-width: 700px) {
    .pin .image { position:relative;
        .image-hover { display:block; position:absolute; top:0; left:0; opacity:0; background-repeat:no-repeat; background-size:contain; background-position:center center; width:100%; height:100%; }
        .shop-now { display:flex; opacity:0; align-items:center; justify-content:center; border-radius:50%; height:5rem; width:5rem; color:white; text-align:center; font-size:1.25rem; text-transform:uppercase; z-index:2; position:absolute; top:1rem; left:1rem; background:$teal;
            span { line-height:100%; }
        }
        &:hover { cursor:pointer;
            .image-hover, .shop-now { opacity:1; transition:.5s all ease; }
        }
    }
}

.menu {
    .reset { display:flex !important; align-items:center; justify-content:center; }
}

.nav-menu {
    .bar { width:4rem; height:.5rem; background-color:$teal; margin-bottom:.75rem; border-radius:30rem; }
}

.mm-menu > .mm-panel { background-color:$teal; }

#nav-menu ul li { margin-bottom:1rem;
    &:after { border:none; }
    a { font-size:3rem; text-transform:uppercase; }
    .mm-subopen {
        &:before { border:none; }
    }
}

.mm-list a.mm-subopen { width:10rem;
    + a { margin-right:10rem; }
    &:after { content:''; width:1.5rem; height:1.5rem; }
    &:before { display:block; content:'More'; font-size:1.75rem; height:1.75rem; position:absolute; right:2rem; margin-top:.7rem; }
}

.mm-list a.mm-subclose:before { content:''; width:1.5rem; height:1.5rem; }

